@using Brazilla.Database.Entities
@using Brazilla.Web.Views.Shared.Components.NavbarComponent
@model NavbarViewModel

<ul class="navbar-nav me-auto my-2 my-lg-0 navbar-nav-scroll">
    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Products
        </a>
        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            @if(Model.BlendTypes.Count == 0)
            {
                <li><a class="dropdown-item disabled" href="#">No blend types</a></li>  
            }
            else
            {
                <li><a class="dropdown-item" href="@Url.Action("Blends", "Blend")">All products</a></li>
                foreach(BlendTypeEntity type in Model.BlendTypes)
                {
                    <li><a class="dropdown-item" href="@Url.Action("Blends", "Blend", new { @typeId = @type.Id })">@type.Name</a></li>
                }
            }
            @if(Model.IsAdmin == true)
            {
                <li><a class="dropdown-item" id="navSubitem3" href="@Url.Action("Create", "Blend")">Add new Blend</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Settings", "BlendTypes")">Blend-type settings</a></li>
            }
        </ul>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="#">About us</a>
    </li>
    @if(Model.IsAuthenticate == true)
    {
        <li class="nav-item">
            <a class="nav-link" href="@Url.Action("Cart", "User")">Cart</a>
        </li>
    }
</ul>